<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <ExpandableListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lv_groups"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/bt_add_group"
            android:text="@string/bt_add_group_label"
            android:layout_below="@+id/lv_groups"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:onClick="onButtonAddGroupClicked" />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/bt_add_city"
            android:text="@string/bt_add_city_label"
            android:layout_gravity="right"
            android:layout_below="@+id/lv_groups"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:onClick="onButtonAddCityClicked" />

    </LinearLayout>

    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="@string/bt_exit_label"
        android:id="@+id/bt_exit"
        android:layout_gravity="center_horizontal"
        android:onClick="onButtonExitClicked" />

</LinearLayout>